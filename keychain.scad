    total = total_text_width(text, scale_factor, spacing);
    start_x = -total / 2;

    for (i = [0:len(text)-1]) {
        xoff = start_x
               + ( i == 0 ? 0 : sum([ for (j = [0:i-1]) get_glyph_width(text[j]) * scale_factor ]) )
